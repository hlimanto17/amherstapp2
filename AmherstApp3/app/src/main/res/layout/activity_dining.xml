<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dining"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.amherst.amherstapp3.DiningActivity"
    android:orientation="vertical">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_breakfast"
        android:onClick="launchBreakfast"
        android:clickable="true"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_lunch"
        android:onClick="launchLunch"
        android:clickable="true"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_dinner"
        android:onClick="launchDinner"
        android:clickable="true"/>

</LinearLayout>
